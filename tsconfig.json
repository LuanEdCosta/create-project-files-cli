{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "baseUrl": ".",
    "lib": ["ESNext", "DOM"],
    "outDir": "./lib",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
