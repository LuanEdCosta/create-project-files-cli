{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "baseUrl": ".",
    "lib": ["ESNext"],
    "outDir": "./lib",
    "rootDir": "./src",
    "newLine": "lf",
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts", "**/*.test.js", "**/*.spec.js"]
}
